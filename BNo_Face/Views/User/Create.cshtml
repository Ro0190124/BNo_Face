@model User

<div class="container">
	
<form method="post" asp-action="Create" class="SignIn">
	<div class="border p-3 Backgroud_US">
		<div class="row pb-2">
			<h2>Thêm nhân viên</h2>
		</div>
		<!--<div asp-validation-summary="All" class="text-danger"></div>-->
		<div class="mb-3">
			<div class="test">
                    <label asp-for="Name" class="title_block"></label>
                    <input asp-for="Name" class="textbox" /> <br />
			</div>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<div class="test">
                    <label asp-for="NumberPhone" class="title_block"></label>
					<input asp-for="NumberPhone" class="textbox"  />
			</div>
			<span asp-validation-for="NumberPhone" class="text-danger"></span>
		</div>
		<div class="mb-3">
				<div class="test">
                    <label asp-for="Birthday" class="title_block"></label>
					<input asp-for="Birthday" class="textbox"/>
				</div>
			<span asp-validation-for="Birthday" class="text-danger" ></span>
		</div>
		<div class="mb-3">
			<!--
			Regular space: &nbsp;
			Two spaces gap: &ensp;
			Four spaces gap: &emsp;
						-->
			<label asp-for="Sex" class="title_block"></label>&emsp;&emsp;
			<input  type="radio" name="Sex" value="true" checked="checked"/> Nam &ensp;
			<input type="radio" name="Sex" value="false" /> Nữ
			<span asp-validation-for="Sex" class="text-danger"></span>
		</div>
		<div class="mb-3">
				<div class="test">
                    <label asp-for="UserName" class="title_block"></label>
                    <input asp-for="UserName" class="textbox" />
				</div>
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<div class="test">
                    <label asp-for="Password" class="title_block"></label>
                    <input asp-for="Password" class="textbox" />
                </div>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Position" class="title_block"></label>
			<input type="radio" name="Position" value="1" /> Admin &ensp;
			<input type="radio" name="Position" value="2" /> Kế Toán &ensp;
			<input type="radio" name="Position" value="3" checked="checked" /> Nhân Viên &ensp;
			<span asp-validation-for="Position" class="text-danger"></span>
		</div>

		<div class="bgr-bt">
			<button type="submit" class="btn btn-primary">Thêm</button>
			@*		<a asp-controller="User" asp-action="Index"> Trở về</a>*@
			<button class="btn btn-primary" asp-controller="User" asp-action="Index">Trở về</button>
		</div>
	</div>
</form>
</div>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		var birthdayInput = document.getElementById("birthdayInput");
		var today = new Date().toISOString().split("T")[0];
		birthdayInput.value = today;
	});
</script>