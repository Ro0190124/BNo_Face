<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BNo_Face</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BNo_Face.styles.css" asp-append-version="true" />
</head>
<body>
    
    @{
        Console.WriteLine("lol");
        Console.WriteLine(ViewData["HideHeader"]);
        // Sử dụng giá trị của biến ViewData
        bool hideHeader = ViewData["HideHeader"] as bool? ?? false;
        bool hideStaff = ViewData["StaffPostision"] as bool? ?? false;
        bool hideManager = ViewData["ManagerPosition"] as bool? ?? false;
        Console.WriteLine("lol2");
        // Hoặc sử dụng giá trị của biến ViewBag
        // bool hideHeader = ViewBag.HideHeader as bool? ?? false;
        }
        @if (!hideHeader)
        {



            <header>
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Index">BNo_Face</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <nav>

                    <ul>
                        @if (!hideStaff)
                        {
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Sản Phẩm</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Danh Mục</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Nhân Viên</a></li>
                        }
                        @if (!hideManager)
                        {
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Thống Kê</a></li>
                        }
				
               
                       <li><a class="nav-link text-dark" asp-area="" asp-controller="Bill" asp-action="Index">Hóa Đơn</a></li>
               

			</ul>
			
        </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
