@model Bill

<div class="container">
	<form method="post" class="SignIn">
		<div class="border p-3">
			<div class="row pb-2">
				<h2>Bill</h2>
			</div>
			<!--<div asp-validation-summary="All" class="text-danger"></div>-->

			
	
			
			
			<div class="mb-3">
				<label asp-for="TotalPrice" class="title_block">Giá</label>
				<select asp-for="TotalPrice" asp-items="ViewBag.priceList" class="form-control"></select>
				<span asp-validation-for="TotalPrice" class="text-danger"></span>
			</div>
		
			
			
			
			<button type="submit" class="btn btn-primary">Tạo Đơn</button>
			<a asp-controller="Bill" asp-action="Index">Trở về </a>
		</div>
	</form>
	
</div>