@model IEnumerable<Bill>
<div class="container">
	<div class="row pt-4">
		<div class="col-1">
			<h2> Danh Mục </h2>
		</div>
		<div class="col-1">

			<a asp-controller="Bill" asp-action="Create" class="btn btn-primary">Thêm Hóa Đơn</a>
		</div>
	</div>
	@using (Html.BeginForm())

	{

		<p>

			Nhập thông tin: @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />

		</p>

	}

	<table class="table_user">
		<thead>
			<tr>
				<th> ID</th>
				<th> Ngày tạo</th>
				<th> Xóa</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.BillID</td>
					<td>@item.DateOfBill</td>
					<td>
						<div>
							<a class="btn btn-danger" asp-controller="Bill" asp-action="Delete" asp-route-id="@item.BillID">
								Xóa
							</a>

						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
