@model Category
<body>

	<div class="container" >
		<form method="post" asp-action="Create" class="SignIn">
			<div class="border p-3 Backgroud_US">
				<div class="row pb-2">
					<h2>Danh Mục</h2>
				</div>
				<!--<div asp-validation-summary="All" class="text-danger"></div>-->
				<div class="mb-3">
					<label asp-for="CategoryName" class="title_block"></label>
					<input asp-for="CategoryName" class="textbox" /> <br />
					<span asp-validation-for="CategoryName" class="text-danger"></span>
				</div>

				<div class="bgr-bt">
					<button type="submit" class="btn btn-primary">Tạo Danh Mục</button>
					<button class="btn btn-primary" asp-controller="Category" asp-action="Index">Trở về</button>
				</div>
			</div>
		</form>
	</div>
</body>