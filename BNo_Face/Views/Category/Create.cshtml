@model Category
<body>
	

	<header>
		<a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Index">BNo_Face</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<nav>

			<ul>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Nhân Viên</a></li>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Sản Phẩm</a></li>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Danh Mục</a></li>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="Bill" asp-action="Index">Hóa Đơn</a></li>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Thống Kê</a></li>
				<li><a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Index">Phiếu Chi</a></li>

			</ul>

		</nav>
	</header>

	<div class="container" >
		<form method="post" asp-action="Create" class="SignIn">
			<div class="border p-3">
				<div class="row pb-2">
					<h2>Danh Mục</h2>
				</div>
				<!--<div asp-validation-summary="All" class="text-danger"></div>-->
				<div class="mb-3">
					<label asp-for="CategoryName" class="title_block"></label>
					<input asp-for="CategoryName" class="textbox" /> <br />
					<span asp-validation-for="CategoryName" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Tạo Danh Mục</button>
				<a asp-controller="Category" asp-action="Index">Trở về </a>
			</div>
		</form>
	</div>
</body>