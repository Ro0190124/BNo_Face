@model Category

<form method="post" class="SignIn" asp-action="Delete">
	<div class="border p-3 Backgroud_US">
		<div class="row pb-2">
			<h2>Danh Mục</h2>
		</div>
		<!--<div asp-validation-summary="All" class="text-danger"></div>-->
		<input type="hidden" asp-for="CategoryID" />
		<div class="mb-3">
			<label asp-for="CategoryName" class="title_block"></label>
			<input asp-for="CategoryName" type="hidden" />
			<span class="textbox BorderShow">@Model.CategoryName</span>
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>
		<div class="Chia">
			<div class="Sbetween">
				<div class="bgr-xbt">
					<button type="submit" class="btn btn-primary" onclick="confirmDelete()">Xóa</button>
				</div>
				<div class="bgr-bt">
					<button class="btn btn-primary" asp-controller="Category" asp-action="Index">Trở về</button>
				</div>
			</div>
		</div>
	</div>
</form>




<script>
    function confirmDelete() {
        if (confirm("Bạn có muốn xóa không?")) {
            document.querySelector('.SignIn').submit();
        }
    }
</script>
